{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipper",
  "version": "0.1.0",
  "identifier": "com.clipper.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "devtools": {
      "enabled": false
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "clipper",
        "width": 400,
        "height": 500,
        "resizable": true,
        "minWidth": 300,
        "minHeight": 400,
        "center": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "wizard",
        "title": "欢迎使用 Clipper",
        "width": 600,
        "height": 700,
        "resizable": false,
        "minWidth": 600,
        "minHeight": 700,
        "center": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; script-src 'self' 'unsafe-inline';"
    }
  }
}
